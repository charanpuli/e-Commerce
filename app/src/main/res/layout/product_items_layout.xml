<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_card_name"
            android:textSize="20dp"
            android:text="Product Name"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/product_card_image"
            android:layout_below="@+id/product_card_name"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_card_price"
            android:textSize="18dp"
            android:text="Product Price"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"

            android:layout_below="@+id/product_card_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_card_description"
            android:textSize="16dp"
            android:text="Product Description"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"

            android:layout_below="@+id/product_card_price"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>