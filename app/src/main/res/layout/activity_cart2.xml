<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity2">
    <RelativeLayout


        android:id="@+id/rl222"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/total_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price = "
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>
    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="Your Final Order has been placed successfully.Soon You will receive the Notifications.Soon order will be Verified"
        android:textSize="20sp"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cart_list2"
        android:layout_below="@+id/rl222"
        android:layout_above="@+id/next_process_btn2"

        >

    </android.support.v7.widget.RecyclerView>

    <!--<Button-->
        <!--android:id="@+id/next_process_btn2"-->
